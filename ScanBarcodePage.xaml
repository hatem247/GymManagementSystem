<Page x:Class="GymManagementSystem.ScanBarcodePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:GymManagementSystem"
      Background="#1E1E1E">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image Source="Images/back.png" Grid.Row="0" Width="30" Height="30" 
               HorizontalAlignment="Left" VerticalAlignment="Top"
               MouseLeftButtonDown="Back_Click"/>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Scan Barcode" FontSize="28" Foreground="White" FontWeight="Bold" Margin="0,0,0,20"/>
            <TextBox x:Name="txtBarcodeInput" Width="300" Height="40" FontSize="18"/>
            <Button Content="Search Client" Width="150" Height="40" Margin="10" Click="SearchClient_Click"/>
        </StackPanel>
    </Grid>
</Page>