<Window x:Class="GymManagementSystem.UpdateClientDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Client Details" Height="300" Width="400" Background="#1E1E1E">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Name:" Foreground="LightGray" VerticalAlignment="Center" />
        <TextBox x:Name="txtName" Grid.Row="0" Margin="0,5" Foreground="White" Background="#333" />

        <TextBlock Text="Age:" Foreground="LightGray" Grid.Row="1" VerticalAlignment="Center"/>
        <TextBox x:Name="txtAge" Grid.Row="1" Margin="0,5" Foreground="White" Background="#333" />

        <TextBlock Text="Weight:" Foreground="LightGray" Grid.Row="2" VerticalAlignment="Center"/>
        <TextBox x:Name="txtWeight" Grid.Row="2" Margin="0,5" Foreground="White" Background="#333" />

        <TextBlock Text="Height:" Foreground="LightGray" Grid.Row="3" VerticalAlignment="Center"/>
        <TextBox x:Name="txtHeight" Grid.Row="3" Margin="0,5" Foreground="White" Background="#333" />

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:Name="btnSave" Content="Save" Width="100" Margin="5" Click="SaveButton_Click"/>
            <Button x:Name="btnCancel" Content="Cancel" Width="100" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>