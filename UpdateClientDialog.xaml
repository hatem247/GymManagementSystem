<Window x:Class="GymManagementSystem.UpdateClientDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Client Details" Height="300" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF121212" Offset="0"/>
            <GradientStop Color="#FF3E2F1C" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Name:" Foreground="LightGray" VerticalAlignment="Center" />
        <TextBox x:Name="txtName" Grid.Row="0" Margin="0,5" Foreground="White" Background="#333" />

        <TextBlock Text="Weight:" Foreground="LightGray" Grid.Row="2" VerticalAlignment="Center"/>
        <TextBox x:Name="txtWeight" Grid.Row="2" Margin="0,5" Foreground="White" Background="#333" />

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:Name="btnSave" Content="Save" Width="100" Margin="5" Click="SaveButton_Click" Background="Gold"/>
            <Button x:Name="btnCancel" Content="Cancel" Width="100" Margin="5" Click="CancelButton_Click" Background="Gold"/>
        </StackPanel>
    </Grid>
</Window>