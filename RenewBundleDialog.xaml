<Window x:Class="GymManagementSystem.RenewBundleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Renew Subscription" Height="200" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF121212" Offset="0"/>
            <GradientStop Color="#FF3E2F1C" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions >
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width = "Auto" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Subscription Bundle: " Grid.Row="0" Grid.Column="0" Foreground="White"/>
        <ComboBox x:Name="BundleBox" Grid.Row="0" Grid.Column="1" Margin="0 5 0 20">
            <ComboBox.ItemContainerStyle>
                <Style TargetType="ComboBoxItem">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="Black" Offset="0.0"/>
                                <GradientStop Color="Gold" Offset="1.0"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="FontSize" Value="15"/>
                </Style>
            </ComboBox.ItemContainerStyle>
            <ComboBoxItem Content="15 Days 15 Sessions"/>
            <ComboBoxItem Content="1 Month 30 Sessions"/>
            <ComboBoxItem Content="3 Months 45 Sessions"/>
            <ComboBoxItem Content="3 Months 90 Sessions"/>
            <ComboBoxItem Content="6 Months 90 Sessions"/>
            <ComboBoxItem Content="6 Months 180 Sessions"/>
        </ComboBox>
        
        <TextBlock Text="Subscription Type: " Grid.Row="1" Grid.Column="0" Foreground="White"/>
        <ComboBox x:Name="SubscipriontypeBox" Grid.Row="1" Grid.Column="1" Margin="0,5,0,40">
            <ComboBox.ItemContainerStyle>
                <Style TargetType="ComboBoxItem">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="Black" Offset="0.0"/>
                                <GradientStop Color="Gold" Offset="1.0"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="FontSize" Value="15"/>
                </Style>
            </ComboBox.ItemContainerStyle>
            <ComboBoxItem Content="Gym only"/>
            <ComboBoxItem Content="Gym and cardio"/>
        </ComboBox>

        <StackPanel Grid.Row="2" Grid.ColumnSpan= "2" Orientation= "Horizontal" HorizontalAlignment= "Center" VerticalAlignment="Bottom">
            <Button x:Name= "btnConfirm" FontSize="15" FontWeight="Bold" Content= "Confirm" Width= "80" Margin="5" Click= "btnConfirm_Click" Background="Gold"/>
            <Button x:Name= "btnCancel" FontSize="15" FontWeight="Bold" Content= "Cancel" Width= "80" Margin="5" Click= "btnCancel_Click" Background="Gold" />
        </StackPanel>
    </Grid>
</Window>