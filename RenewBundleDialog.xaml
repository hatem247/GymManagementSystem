<Window x:Class="GymManagementSystem.RenewBundleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Renew Subscription" Height="200" Width="300">
    <Grid Margin = "10" >
        <Grid.RowDefinitions >
            <RowDefinition Height="Auto"/>
            <RowDefinition Height = "Auto" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width = "Auto" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Subscription Bundle: " Grid.Row="0" Grid.Column="0" Foreground="Black"/>
        <ComboBox x:Name="BundleBox" Grid.Row="0" Grid.Column="1" Margin="0 5 0 20">
            <ComboBoxItem Content="15 Days"/>
            <ComboBoxItem Content="1 Month"/>
            <ComboBoxItem Content="3 Months"/>
            <ComboBoxItem Content="6 Months"/>
        </ComboBox>

        <TextBlock Text="Subscription Type: " Grid.Row="1" Grid.Column="0" Foreground="Black"/>
        <ComboBox x:Name="SubscipriontypeBox" Grid.Row="1" Grid.Column="1" Margin="0 5 0 20">
            <ComboBoxItem Content="Gym only"/>
            <ComboBoxItem Content="Gym and cardio"/>
        </ComboBox>

        <StackPanel Grid.Row="2" Grid.ColumnSpan= "2" Orientation= "Horizontal" HorizontalAlignment= "Right" Margin= "0,10,0,0" >
            <Button x:Name= "btnConfirm" Content= "Confirm" Width= "75" Margin= "0,0,10,0" Click= "btnConfirm_Click" />
            <Button x:Name= "btnCancel" Content= "Cancel" Width= "75" Click= "btnCancel_Click" />
        </StackPanel>
    </Grid>
</Window>