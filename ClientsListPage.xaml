<Page x:Class="GymManagementSystem.ClientsListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Page.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF121212" Offset="0"/>
            <GradientStop Color="#FF3E2F1C" Offset="1"/>
        </LinearGradientBrush>
    </Page.Background>
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Ellipse Width="30" Height="30" HorizontalAlignment="Left" MouseLeftButtonDown="Back_Click" Margin="5" VerticalAlignment="Top">
            <Ellipse.Fill>
                <ImageBrush ImageSource="/Images/back.png"/>
            </Ellipse.Fill>
        </Ellipse>
        <TextBlock Text="Clients List" Grid.Row="0" Foreground="White" FontSize="40" Margin="5"
                   HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center">
            <TextBox x:Name="SearchInput" Width="300" Height="40" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="Black" BorderBrush="Gold" BorderThickness="2" Foreground="White"/>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button Content="Search" Click="Search_Click"
        Background="Gold" Width="120" Height="25" Foreground="Black" Margin="5" FontWeight="Bold" FontSize="17"/>
                <Button Content="Refresh" HorizontalAlignment="Left" Click="Refresh_Click"
        Background="Gold" Width="120" Height="25" Foreground="Black" Margin="5" FontWeight="Bold" FontSize="17"/>
            </StackPanel>
        </StackPanel>
        <ListView x:Name="ClientsList" Grid.Row="2" Margin="10" 
                  SelectionChanged="ClientsList_SelectionChanged"
                  Background="#FF2E2E2E" Foreground="White">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="{Binding FullName}" Width="150"/>
                        <TextBlock Text="{Binding Phone}" Width="150"/>
                        <TextBlock Text="{Binding SubscriptionEnd, StringFormat='yyyy-MM-dd'}" Width="150"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>