<Page x:Class="GymManagementSystem.ClientsListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Page.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF121212" Offset="0"/>
            <GradientStop Color="#FF3E2F1C" Offset="1"/>
        </LinearGradientBrush>
    </Page.Background>

    <Grid>

        <TextBlock Text="Clients List" Foreground="White" FontSize="24" Margin="0 20 0 0"
                   HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <ListView x:Name="ClientsList" Margin="30,70,30,30" 
                  SelectionChanged="ClientsList_SelectionChanged"
                  Background="#FF2E2E2E" Foreground="White">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="{Binding FullName}" Width="150"/>
                        <TextBlock Text="{Binding Phone}" Width="150"/>
                        <TextBlock Text="{Binding SubscriptionEnd, StringFormat='yyyy-MM-dd'}" Width="150"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>