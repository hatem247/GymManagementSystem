<Page x:Class="GymManagementSystem.ClientsListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#FF1F1F1F">

    <Grid>
        <Image Source="Images/back.png" Width="15" Height="15" 
               HorizontalAlignment="Left" VerticalAlignment="Top"
               MouseLeftButtonDown="Back_Click"/>


        <TextBlock Text="Clients List" Foreground="White" FontSize="24" Margin="0 20 0 0"
                   HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <ListView x:Name="ClientsList" Margin="30,70,30,30" 
                  SelectionChanged="ClientsList_SelectionChanged"
                  Background="#FF2E2E2E" Foreground="White">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="{Binding FullName}" Width="150"/>
                        <TextBlock Text="{Binding Phone}" Width="150"/>
                        <TextBlock Text="{Binding SubscriptionEnd, StringFormat='yyyy-MM-dd'}" Width="150"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>