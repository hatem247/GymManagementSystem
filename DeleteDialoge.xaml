<Window x:Class="GymManagementSystem.DeleteDialoge"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Delete Client" Height="80" Width="322"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF121212" Offset="0"/>
            <GradientStop Color="#FF3E2F1C" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Delete" Width="124" FontSize="15" FontWeight="Bold" Margin="10" Click="DeleteButton_Click" Background="Gold"/>
            <Button Content="Cancel" Width="124" Margin="10" FontSize="15" FontWeight="Bold" Click="CancelButton_Click" Background="Gold"/>
        </StackPanel>
    </Grid>
</Window>