<Page x:Class="GymManagementSystem.ClientDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:GymManagementSystem"
      Background="#1E1E1E">
    <Grid Margin="30">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <!-- Header icons -->
        <Grid Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Image Source="Images/logo.jpg" Width="30" Height="30" MouseLeftButtonDown="HomeIcon_Click"/>
            <Image Source="Images/back.png" Width="30" Height="30" Margin="40,0,0,0" MouseLeftButtonDown="Back_Click"/>
        </Grid>

        <!-- Title -->
        <TextBlock Text="Client Details" FontSize="28" Foreground="White" FontWeight="Bold" Grid.Row="1" Margin="0,0,0,20"/>

        <!-- Details section -->
        <StackPanel Grid.Row="2" Margin="0,0,0,20">
            <TextBlock Text="Name:" Foreground="LightGray"/>
            <TextBlock x:Name="txtName" FontWeight="Bold" Foreground="White"/>
            <TextBlock Text="Phone:" Foreground="LightGray"/>
            <TextBlock x:Name="txtPhone" FontWeight="Bold" Foreground="White"/>
            <TextBlock Text="Weight:" Foreground="LightGray"/>
            <TextBlock x:Name="txtWeight" FontWeight="Bold" Foreground="White"/>
            <TextBlock Text="Subscription Type:" Foreground="LightGray"/>
            <TextBlock x:Name="txtSubscription" FontWeight="Bold" Foreground="White"/>
            <TextBlock Text="Start Date:" Foreground="LightGray"/>
            <TextBlock x:Name="txtStart" FontWeight="Bold" Foreground="White"/>
            <TextBlock Text="End Date:" Foreground="LightGray"/>
            <TextBlock x:Name="txtEnd" FontWeight="Bold" Foreground="White"/>
            <TextBlock Text="Days Left:" Foreground="LightGray"/>
            <TextBlock x:Name="txtDaysLeft" FontWeight="Bold" Foreground="White"/>
        </StackPanel>

        <!-- Main buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
            <Button x:Name="btnEdit" Content="Edit" Width="80" Margin="5" Click="EditButton_Click"/>
            <Button x:Name="btnFreeze" Content="Freeze" Width="80" Margin="5" Click="FreezeButton_Click"/>
            <Button x:Name="btnRenew" Content="Renew Bundle" Width="120" Margin="5" Click="btnRenew_Click"/>
            <Button x:Name="btnDelete" Content="Delete" Width="80" Margin="5" Click="DeleteButton_Click"/>
        </StackPanel>

        <!-- Logs DataGrid -->
        <DataGrid x:Name="LogsDataGrid"
                  Grid.Row="4"
                  AutoGenerateColumns="False"
                  Background="#2D2D30"
                  Foreground="White"
                  CanUserAddRows="False"
                  HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal"
                  Margin="0,10,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" />
                <DataGridTextColumn Header="Date" Binding="{Binding Date}" />
                <DataGridTextColumn Header="Time" Binding="{Binding Time}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>