<Page x:Class="GymManagementSystem.AddClientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Page.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF121212" Offset="0"/>
            <GradientStop Color="#FF3E2F1C" Offset="1"/>
        </LinearGradientBrush>
    </Page.Background>

    <Grid>
        <Grid>
           <Grid.RowDefinitions>
               <RowDefinition Height="Auto"/>
               <RowDefinition Height="*"/>
           </Grid.RowDefinitions>


           <Border Grid.Row="1" Background="#FF2E2E2E" CornerRadius="15" Padding="30" Width="400" HorizontalAlignment="Center" VerticalAlignment="Center">
               <StackPanel>
                    <TextBlock Text="Add New Client" Foreground="White" FontSize="30" HorizontalAlignment="Center" Margin="0 0 0 20"/>
                </StackPanel>
           </Border>
        </Grid>
        <Border Background="#FF2E2E2E" CornerRadius="15" Padding="30" Width="400" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Add New Client" Foreground="White" FontSize="30" HorizontalAlignment="Center" Margin="0 0 0 20" FontWeight="Bold"/>

                <TextBlock Text="Full Name" Foreground="White" FontSize="20"/>
                <TextBox x:Name="FullNameBox" Margin="10,10,10,10"  Width="320" Height="40" FontSize="18" VerticalContentAlignment="Center" Background="Black" BorderBrush="Gold" BorderThickness="2" Foreground="White"/>

                <TextBlock Text="Phone Number" Foreground="White" FontSize="20"/>
                <TextBox x:Name="PhoneNumberBox" Margin="10,10,10,10"  Width="320" Height="40" FontSize="18" VerticalContentAlignment="Center" Background="Black" BorderBrush="Gold" BorderThickness="2" Foreground="White"/>


                <TextBlock Text="Weight (kg)" Foreground="White" FontSize="20"/>
                <TextBox x:Name="WeightBox" Margin="10,10,10,10"  Width="320" Height="40" FontSize="18" VerticalContentAlignment="Center" Background="Black" BorderBrush="Gold" BorderThickness="2" Foreground="White"/>

                <TextBlock Text="Subscription Bundle" Foreground="White" FontSize="20"/>
                <ComboBox x:Name="BundleBox" Height="40" Margin="10,10,10,10"  Width="320">
                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="Black" Offset="0.0"/>
                                        <GradientStop Color="Gold" Offset="1.0"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="FontSize" Value="15"/>
                        </Style>
                    </ComboBox.ItemContainerStyle>
                    <ComboBoxItem Content="15 Days"/>
                    <ComboBoxItem Content="1 Month"/>
                    <ComboBoxItem Content="3 Months"/>
                    <ComboBoxItem Content="6 Months"/>
                </ComboBox>

                <TextBlock Text="Subscription Type" Foreground="White" FontSize="20"/>
                <ComboBox Width="320" x:Name="SubscipriontypeBox" Height="40" Margin="10,10,10,10">
                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="Black" Offset="0.0"/>
                                        <GradientStop Color="Gold" Offset="1.0"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="FontSize" Value="15"/>
                        </Style>
                    </ComboBox.ItemContainerStyle>

                    <ComboBoxItem Content="Gym only"/>
                    <ComboBoxItem Content="Gym and cardio"/>
                </ComboBox>

                <Button Content="Save Client" Click="SaveClient_Click"
                        Background="Gold" Foreground="Black" Padding="10" FontWeight="Bold" FontSize="20" />
                <TextBlock x:Name="StatusText" Foreground="Gold" Margin="0 10 0 0" TextAlignment="Center"/>

                <TextBlock Text="Client Barcode" Foreground="White" Margin="0 10 0 10"/>
                <Image x:Name="BarcodeImage" Width="300" Height="100" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>