<Page x:Class="GymManagementSystem.AddClientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Page.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF121212" Offset="0"/>
            <GradientStop Color="#FF3E2F1C" Offset="1"/>
        </LinearGradientBrush>
    </Page.Background>
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
        </Grid>
        <ScrollViewer VerticalScrollBarVisibility="Hidden">
            <Border Background="#FF2E2E2E" CornerRadius="15" Padding="30" Width="400" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel>
                    <Ellipse Width="30" Height="30" HorizontalAlignment="Left" MouseLeftButtonDown="Back_Click" Margin="5" VerticalAlignment="Top">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/Images/back.png"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <TextBlock Text="Add New Client" Foreground="White" FontSize="30" HorizontalAlignment="Center" Margin="0 0 0 20" FontWeight="Bold"/>

                    <TextBlock Text="Full Name" Foreground="White" FontSize="15"/>
                    <TextBox x:Name="FullNameBox" Margin="5"  Width="320" Height="30" FontSize="15" VerticalContentAlignment="Center" Background="Black" BorderBrush="Gold" BorderThickness="2" Foreground="White"/>

                    <TextBlock Text="Phone Number" Foreground="White" FontSize="15"/>
                    <TextBox x:Name="PhoneNumberBox" Margin="5"  Width="320" Height="30" FontSize="15" VerticalContentAlignment="Center" Background="Black" BorderBrush="Gold" BorderThickness="2" Foreground="White"/>


                    <TextBlock Text="Weight (kg)" Foreground="White" FontSize="15"/>
                    <TextBox x:Name="WeightBox" Margin="5"  Width="320" Height="30" FontSize="15" VerticalContentAlignment="Center" Background="Black" BorderBrush="Gold" BorderThickness="2" Foreground="White"/>

                    <TextBlock Text="Subscription Bundle" Foreground="White" FontSize="15"/>
                    <ComboBox x:Name="BundleBox" Height="30" Margin="5"  Width="320">
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="Black" Offset="0.0"/>
                                            <GradientStop Color="Gold" Offset="1.0"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="FontSize" Value="15"/>
                            </Style>
                        </ComboBox.ItemContainerStyle>
                        <ComboBoxItem Content="15 Days 15 Sessions"/>
                        <ComboBoxItem Content="1 Month 30 Sessions"/>
                        <ComboBoxItem Content="3 Months 45 Sessions"/>
                        <ComboBoxItem Content="3 Months 90 Sessions"/>
                        <ComboBoxItem Content="6 Months 90 Sessions"/>
                        <ComboBoxItem Content="6 Months 180 Sessions"/>
                    </ComboBox>

                    <TextBlock Text="Subscription Type" Foreground="White" FontSize="15"/>
                    <ComboBox Width="320" x:Name="SubscipriontypeBox" Height="30" Margin="5">
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="Black" Offset="0.0"/>
                                            <GradientStop Color="Gold" Offset="1.0"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="FontSize" Value="15"/>
                            </Style>
                        </ComboBox.ItemContainerStyle>

                        <ComboBoxItem Content="Gym only"/>
                        <ComboBoxItem Content="Gym and cardio"/>
                    </ComboBox>

                    <Button Content="Save Client" Click="SaveClient_Click"
                Background="Gold" Foreground="Black" Margin="5" Padding="5" FontWeight="Bold" FontSize="15" />
                    <TextBlock x:Name="StatusText" Foreground="Gold" Margin="5" TextAlignment="Center"/>

                    <TextBlock Text="Client Barcode" Foreground="White" Margin="5"/>
                    <Image x:Name="BarcodeImage" Width="300" Height="100"/>
                    <Button x:Name="Savebtn" Content="Save Barcode" Visibility="Hidden" Click="SaveBarcode_Click"
            Background="Gold" Foreground="Black" Padding="5" FontWeight="Bold" FontSize="15" Width="200" Height="30" Margin="5"/>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</Page>