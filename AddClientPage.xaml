<Page x:Class="GymManagementSystem.AddClientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#FF1F1F1F">

    <Grid>
        <Grid>
           <Grid.RowDefinitions>
               <RowDefinition Height="Auto"/>
               <RowDefinition Height="*"/>
           </Grid.RowDefinitions>

           <Grid Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top">
               <Image Source="Images/back.png" Width="30" Height="30" 
                      HorizontalAlignment="Left" VerticalAlignment="Top" Margin="40,0,0,0"
                      MouseLeftButtonDown="Back_Click"/>
           </Grid>

           <Border Grid.Row="1" Background="#FF2E2E2E" CornerRadius="15" Padding="30" Width="400" HorizontalAlignment="Center" VerticalAlignment="Center">
               <StackPanel>
                   <TextBlock Text="Add New Client" Foreground="White" FontSize="24" HorizontalAlignment="Center" Margin="0 0 0 20"/>
                   <!-- Remaining content -->
               </StackPanel>
           </Border>
        </Grid>
        <Border Background="#FF2E2E2E" CornerRadius="15" Padding="30" Width="400" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Add New Client" Foreground="White" FontSize="24" HorizontalAlignment="Center" Margin="0 0 0 20"/>

                <TextBlock Text="Full Name" Foreground="White"/>
                <TextBox x:Name="FullNameBox" Margin="0 5 0 10"/>

                <TextBlock Text="Age" Foreground="White"/>
                <TextBox x:Name="AgeBox" Margin="0 5 0 10"/>

                <TextBlock Text="Phone Number" Foreground="White"/>
                <TextBox x:Name="PhoneNumberBox" Margin="0 5 0 10"/>


                <TextBlock Text="Weight (kg)" Foreground="White"/>
                <TextBox x:Name="WeightBox" Margin="0 5 0 10"/>

                <TextBlock Text="Height (cm)" Foreground="White"/>
                <TextBox x:Name="HeightBox" Margin="0 5 0 10"/>

                <TextBlock Text="Subscription Bundle" Foreground="White"/>
                <ComboBox x:Name="BundleBox" Margin="0 5 0 20">
                    <ComboBoxItem Content="15 Days"/>
                    <ComboBoxItem Content="1 Month"/>
                    <ComboBoxItem Content="3 Months"/>
                </ComboBox>

                <Button Content="Save Client" Click="SaveClient_Click"
                        Background="#FF4CAF50" Foreground="White" Padding="10"/>
                <TextBlock x:Name="StatusText" Foreground="LightGreen" Margin="0 10 0 0" TextAlignment="Center"/>

                <TextBlock Text="Client Barcode" Foreground="White" Margin="0 10 0 10"/>
                <Image x:Name="BarcodeImage" Width="300" Height="100" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>