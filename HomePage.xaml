<Page x:Class="GymManagementSystem.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Page.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF121212" Offset="0"/>
            <GradientStop Color="#FF3E2F1C" Offset="1"/>
        </LinearGradientBrush>
    </Page.Background>
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Ellipse Width="30" Height="30" Grid.Row="0" HorizontalAlignment="Left" MouseLeftButtonDown="Back_Click" VerticalAlignment="Top">
            <Ellipse.Fill>
                <ImageBrush ImageSource="/Images/back.png"/>
            </Ellipse.Fill>
        </Ellipse>
        <Ellipse Width="150" Height="150" Grid.Row="1" VerticalAlignment="Top" Margin="127,-60,127,0" Grid.RowSpan="2">
            <Ellipse.Fill>
                <ImageBrush ImageSource="/Images/logo.jpg"/>
            </Ellipse.Fill>
        </Ellipse>
        <TextBlock Text="Welcome, Admin" FontSize="40" Foreground="White" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,90,0,0"/>

        <StackPanel HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Top" Width="300" Margin="0,24,0,0">

            <Button Content="📷 Scan Barcode"
                    Background="#FF2196F3" Foreground="White" FontSize="20"
                    Padding="10" Margin="10" Click="ScanBarcode_Click" />

            <Button Content="➕ Add New Client" 
                    Background="#FF4CAF50" Foreground="White" FontSize="20"
                    Padding="10" Margin="10" Click="AddClient_Click" />

            <Button Content="# Logs" 
                    Background="Chocolate" Foreground="White" FontSize="20"
                    Padding="10" Margin="10" Click="Logs_Click" />

            <Button Content="$ Income" 
                    Background="#FF4CAF50" Foreground="White" FontSize="20"
                    Padding="10" Margin="10" Click="Income_Click" />

            <Button Content="View Clients" Click="ViewClients_Click" FontSize="20"
        Background="#FF2196F3" Foreground="White" Padding="10" Margin="10"/>

        </StackPanel>
    </Grid>
</Page>