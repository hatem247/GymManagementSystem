<Page x:Class="GymManagementSystem.IncomePage" 
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GymManagementSystem"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="IncomePage">

    <Grid>
        <!-- Subtle black and muted gold blend -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF121212" Offset="0"/>
                <GradientStop Color="#FF3E2F1C" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <Ellipse Width="30" Height="30" HorizontalAlignment="Left" MouseLeftButtonDown="Back_Click" Margin="5" VerticalAlignment="Top">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="/Images/back.png"/>
                </Ellipse.Fill>
            </Ellipse>
            <TextBlock x:Name="totaltodaytxt" Foreground="White" FontWeight="Bold" FontSize="17" Margin="5"
                  HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <TextBlock x:Name="totalmonthtxt" Foreground="White" FontWeight="Bold" FontSize="17" Margin="5"
                  HorizontalAlignment="Left" VerticalAlignment="Top"/>
        </StackPanel>
        <TextBlock Text="Income" Foreground="White" FontWeight="Bold" FontSize="24" Margin="0 20 0 0"
             HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <!-- Content -->
        <StackPanel Grid.Row="1" Margin="10">
            <!-- ComboBox with gentle black/gold style -->
            <DatePicker x:Name="IncomeDatePicker"
            Width="200"
            Height="30"
            Margin="10"
            SelectedDate="{Binding SelectedDate, Mode=TwoWay}"
            Foreground="White"
            Background="Black"
            FontSize="15">
                <DatePicker.Resources>
                    <Style TargetType="DatePickerTextBox">
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Background" Value="Black"/>
                    </Style>
                    <Style TargetType="Calendar">
                        <Setter Property="Background" Value="Black"/>
                        <Setter Property="Foreground" Value="White"/>
                    </Style>
                </DatePicker.Resources>
            </DatePicker>


            <Button Content="Refresh" Click="Refresh_Click"
                Background="Gold" Width="100" Height="30" Foreground="Black" Margin="10, 0, 10, 10" FontWeight="Bold" FontSize="15" />

            <!-- DataGrid with elegant colors -->
            <DataGrid x:Name="IncomeDataGrid" ItemsSource="{Binding Incomes}" AutoGenerateColumns="False" IsReadOnly="True"
                      Background="#FF1A1A1A" Foreground="White"
                      RowBackground="#FF2A2A2A" AlternatingRowBackground="#FF222222"
                      BorderBrush="#FFD4AF37" BorderThickness="1"
                      GridLinesVisibility="All"
                      HorizontalGridLinesBrush="#FF8C6D1F"
                      VerticalGridLinesBrush="#FF8C6D1F">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#FFD4AF37"/>
                        <Setter Property="Foreground" Value="#FF111111"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="Padding" Value="6"/>
                        <Setter Property="FontSize" Value="10"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" FontSize="15" Binding="{Binding Name}" />
                    <DataGridTextColumn Header="Phone" FontSize="15" Binding="{Binding Phone}" />
                    <DataGridTextColumn Header="Date" FontSize="15" Binding="{Binding Date}" />
                    <DataGridTextColumn Header="Time" FontSize="15" Binding="{Binding Time}" />
                    <DataGridTextColumn Header="Amount" FontSize="15" Binding="{Binding Amount}" />
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>
