<Page x:Class="GymManagementSystem.IncomePage" 
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GymManagementSystem"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="IncomePage">

    <Grid>
        <!-- Subtle black and muted gold blend -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF121212" Offset="0"/>
                <GradientStop Color="#FF3E2F1C" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Content -->
        <StackPanel Grid.Row="1" Margin="10">
            <!-- ComboBox with gentle black/gold style -->
            <ComboBox x:Name="IncomeFilterComboBox" SelectionChanged="IncomeFilterComboBox_SelectionChanged" Width="200" Height="30" Margin="10">
                <ComboBox.ItemContainerStyle>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Background">
                            <Setter.Value>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="Black" Offset="0.0"/>
                                    <GradientStop Color="Gold" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="FontSize" Value="15"/>
                    </Style>
                </ComboBox.ItemContainerStyle>
                <ComboBoxItem Content=""/>
                <ComboBoxItem Content="Today"/>
                <ComboBoxItem Content="Yesterday"/>
                <ComboBoxItem Content="Last Week"/>
                <ComboBoxItem Content="Last Month"/>
            </ComboBox>


            <!-- DataGrid with elegant colors -->
            <DataGrid x:Name="IncomeDataGrid" AutoGenerateColumns="False" IsReadOnly="True"
                      Background="#FF1A1A1A" Foreground="White"
                      RowBackground="#FF2A2A2A" AlternatingRowBackground="#FF222222"
                      BorderBrush="#FFD4AF37" BorderThickness="1"
                      GridLinesVisibility="All"
                      HorizontalGridLinesBrush="#FF8C6D1F"
                      VerticalGridLinesBrush="#FF8C6D1F">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#FFD4AF37"/>
                        <Setter Property="Foreground" Value="#FF111111"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="Padding" Value="6"/>
                        <Setter Property="FontSize" Value="10"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" FontSize="15" Binding="{Binding Name}" />
                    <DataGridTextColumn Header="Phone" FontSize="15" Binding="{Binding Phone}" />
                    <DataGridTextColumn Header="Date" FontSize="15" Binding="{Binding Date}" />
                    <DataGridTextColumn Header="Time" FontSize="15" Binding="{Binding Time}" />
                    <DataGridTextColumn Header="Amount" FontSize="15" Binding="{Binding Amount}" />
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>
