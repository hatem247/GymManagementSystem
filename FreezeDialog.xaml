<Window x:Class="GymManagementSystem.FreezeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Freeze Client" Height="150" Width="300"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF121212" Offset="0"/>
            <GradientStop Color="#FF3E2F1C" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,37,0,0">
            <Button Content="Confirm" Width="100" Height="30" FontSize="15" Margin="5" FontWeight="Bold" Click="Save_Click" Background="Gold"/>
            <Button Content="Cancel" Width="100" Height="30" Margin="5" FontSize="15" FontWeight="Bold" Click="Cancel_Click" Background="Gold" />
        </StackPanel>
    </Grid>
</Window>
