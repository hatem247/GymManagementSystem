<Page x:Class="GymManagementSystem.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#FF1F1F1F">
    <Grid>
        <Border Background="#FF2E2E2E" Padding="40" CornerRadius="20" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Width="300" >
                <TextBlock Text="GYM Login" Foreground="White" FontSize="24" Margin="0 0 0 20" HorizontalAlignment="Center"/>

                <TextBlock Text="Username" Foreground="White"/>
                <TextBox x:Name="UsernameTextBox" Margin="0 5 0 15"/>

                <TextBlock Text="Password" Foreground="White"/>
                <PasswordBox x:Name="PasswordBox" Margin="0 5 0 25"/>

                <Button Content="Login" Click="Login_Click" Background="#FF4CAF50" Foreground="White" Padding="10"/>
                <TextBlock x:Name="ErrorText" Foreground="Red" Margin="0 10 0 0" TextAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>