<Page x:Class="GymManagementSystem.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Page.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF121212" Offset="0"/>
            <GradientStop Color="#FF3E2F1C" Offset="1"/>
        </LinearGradientBrush>
    </Page.Background>
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Width="502" Height="637">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Ellipse Width="175" Height="175" Grid.Row="0" VerticalAlignment="Top" Margin="10">
            <Ellipse.Fill>
                <ImageBrush ImageSource="/Images/logo.jpg"/>
            </Ellipse.Fill>
        </Ellipse>
        <Border Background="#FF2E2E2E" Padding="40" Grid.Row="1" CornerRadius="20" VerticalAlignment="Top" HorizontalAlignment="Center">
            <StackPanel Width="300" >
                <TextBlock Text="GYM Login" Foreground="White" FontSize="40" Margin="0 0 0 20" HorizontalAlignment="Center"/>

                <TextBlock Text="Username" Foreground="White" FontSize="20"/>
                <TextBox x:Name="UsernameTextBox" Height="40" FontSize="20" Margin="0 5 0 15" Foreground="White" BorderBrush="Gold" Background="Black" BorderThickness="2" VerticalContentAlignment="Center"/>

                <TextBlock Text="Password" Foreground="White" FontSize="20"/>
                <PasswordBox x:Name="PasswordBox" Height="40" FontSize="20" Margin="0 5 0 25" Foreground="White" BorderBrush="Gold" Background="Black" BorderThickness="2" VerticalContentAlignment="Center"/>

                <Button Content="Login" Click="Login_Click" Background="Gold" Foreground="Black" FontSize="20" FontWeight="Bold" Padding="10"/>
                <TextBlock x:Name="ErrorText" Foreground="Red" Margin="0 10 0 0" TextAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>